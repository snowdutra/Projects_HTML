        var qual = Object(pais.value)   
        res.innerHTML = `<p> Seu país é o <strong>${qual}</strong>`
          if (pais){
            res.innerHTML += (`<p> <strong> Você escolheu o ${pais.value} como seu pais </strong> </p>`)

            } 
         }
